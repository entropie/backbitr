#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), "../lib")

require "backbitr"

require "optparse"

opts = OptionParser.new do |opts|
  opts.banner = "backbitr"

  opts.on("-S", "--setup <PATH>", "Sets up a new backbitr repository in PATH") do |arg|
    Backbitr.repository.create
    exit 0
  end

  opts.on("-L", "--long-list", "Prints recent posts to STDOUT") do |arg|
    Backbitr.repository.entries.first(10).each do |post|
      puts post.to_s
      puts(("-"*60).white)
    end
    exit 0
  end

  opts.on("-l", "--list", "Prints recent posts to STDOUT") do |arg|
    Backbitr.repository.entries.first(10).each do |post|
      puts post.to_s(false)
      puts(("-"*60).white)
    end
    exit 0
  end

  opts.on("-H", "--html", "Prints recent posts to STDOUT") do |arg|
    Backbitr.repository.entries.first(10).each do |post|
      puts post.with_filter
      puts(("-"*60).white)
    end
    exit 0
  end

end


begin
  opts.parse!
rescue OptionParser::InvalidOption
  puts "bbr: #{$!.message}"
  puts "bbr: try 'bbr --help' for more information"
  exit 1
end



